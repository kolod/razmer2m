{
    "cmake.debugConfig": {
        "MIMode": "gdb",
        "miDebuggerPath": "gdb.exe",
        "sourceFileMap": {
            "${workspaceFolder}": "${workspaceFolder}"
        }
    },
    "files.associations": {
        "compare": "cpp",
        "cstdint": "cpp"
    },
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, BreakBeforeBraces: Attach, IndentWidth: 4, TabWidth: 4, UseTab: Never, ColumnLimit: 120 }",
    "editor.rulers": [
        120
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "cSpell.words": [
        "atmega",
        "AVRDUDE",
        "BAUDRATE",
        "Kolodkin",
        "LFUSE",
        "microcontroller",
        "Oleksandr",
        "Razmer",
        "RXCIE",
        "UDRIE",
        "USART"
    ],
    "cSpell.enabledFileTypes": {
        "*": false,
        "markdown": true,
        "json": true,
        "jsonc": true,
        "cpp": true,
        "c": true,
        "h": true
    },
    "cSpell.language": "en,uk",
    "cSpell.minWordLength": 5
}